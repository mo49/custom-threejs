html(lang="ja")
    head
        style.
            html, body {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
            }

            #app {
            width: 100%;
            height: 100%;
            }
            .scenes{
            position: fixed;
            top: 0; right: 0;
            color: #333;
            }
            .scenes span{
            background-color: #eee;
            padding: 10px;
            cursor: pointer;
            }
            .controller{
            position: fixed;
            top: 0; left: 0;
            color: #333;
            }
            .controller span{
            background-color: #eee;
            padding: 10px;
            cursor: pointer;
            }

    body
        #app

        // shader
        script#vertexShader(type='x-shader/x-vertex')
            include ./shader/vertex.vs
        script#fragmentShader(type='x-shader/x-fragment')
            include ./shader/fragment.fs

        script(src="./js/lib/three.min.js")
        script(src="./js/lib/loader/draco_decoder.js")
        script(src="./js/lib/loader/DRACOLoader.js")
        script(src="./js/lib/loader/GLTFLoader.js")
        script(src="./js/script.js")

